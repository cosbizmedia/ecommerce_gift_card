<div class="container">
<h1>Products for sale</h1><hr>

<% @products.each do |product| %>
	
	<div class="row">
		<div class="col-md-2">
			<%= image_tag product.image.url(:medium) %>
		</div>

		<div class="col-lg-6 well">
			<h1><%= product.name %></h1>
			<p><%= product.description %></p>
			<h2>Price: <%= product.price %></h2>
		</div>

		<div class="pull-right">
			<%= link_to "Buy now", ' ', class: "btn btn-success" %>
			<%= link_to "View Product", product_path(product), class: "btn btn-warning" %>
			<%= link_to "edit", edit_product_path(product), class: "btn btn-success" %>
			<%= link_to "Delete", product_path(product), method: :delete, class: "btn btn-danger" %>
			
		</div>
	</div>

	<hr>

<% end %>

</div>