<div class="container">
<h1>Products for sale</h1><hr>

<% @products.each do |product| %>

	<h1><%= product.name %></h1>
	<%= link_to "Buy now", ' ', class: "btn btn-success pull-right" %>
	<%= link_to "View Product", product_path(product), class: "btn btn-warning pull-right" %>
	<%= link_to "edit", edit_product_path(product), class: "btn btn-success pull-right" %>
	<%= link_to "Delete", product_path(product), method: :delete, class: "btn btn-danger pull-right" %>
	<p><%= product.description %></p>
	<h2>Price: <%= product.price %></h2>

	<hr>

<% end %>

</div>